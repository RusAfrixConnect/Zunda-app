# Server
PORT=5000
NODE_ENV=production

# Database (PostgreSQL - Россия)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zunda_db
DB_USER=zunda_user
DB_PASSWORD=твой_пароль

# Redis (Кэш)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=твой_секретный_ключ
JWT_EXPIRE=7d

# YooMoney (ЮKassa)
YOO_SHOP_ID=твой_shop_id
YOO_SECRET_KEY=твой_секретный_ключ

# Yandex Cloud (Для хранения медиа)
YANDEX_ACCESS_KEY=твой_ключ
YANDEX_SECRET_KEY=твой_секрет
YANDEX_BUCKET=zunda-media

# SMS (для верификации телефона)
SMS_API_KEY=твой_ключ_sms_ru
